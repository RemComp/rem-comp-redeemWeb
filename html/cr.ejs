<!DOCTYPE html>

<html lang="en" class="light-style layout-menu-fixed layout-wide" dir="ltr" data-theme="theme-default"
  data-assets-path="../assets/">

<head>
  <meta charset="utf-8" />
  <meta name="viewport"
    content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

  <title>RemCp. | Create Redeem</title>

  <meta name="description" content="" />

  <!-- Favicon -->
  <link rel="apple-touch-icon" sizes="180x180" href="../assets/img/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="../assets/img/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="../assets/img/favicon/favicon-16x16.png">
  <link rel="manifest" href="../assets/img/favicon/site.webmanifest">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
    rel="stylesheet" />

  <link rel="stylesheet" href="../assets/vendor/fonts/boxicons.css" />

  <!-- Core CSS -->
  <link rel="stylesheet" href="../assets/vendor/css/core.css" class="template-customizer-core-css" />
  <link rel="stylesheet" href="../assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
  <link rel="stylesheet" href="../assets/css/style.css" />

  <!-- Vendors CSS -->
  <link rel="stylesheet" href="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

  <!-- Page CSS -->

  <!-- Helpers -->
  <script src="../assets/vendor/js/helpers.js"></script>
  <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
  <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
  <script src="../assets/js/config.js"></script>
</head>

<body>
  <!-- Layout wrapper -->
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <!-- Menu -->

      <%- include('page/sidebar', { pageActive, isAdmin }) %>
      <!-- / Menu -->

      <!-- Layout container -->
      <div class="layout-page"
        style="background-image: url('../assets/img/backgrounds/4907157.jpg'); background-size: cover; background-repeat: no-repeat; width: 100%; height: 100%;">
        <!-- Navbar -->

        <%- include('page/navbar', { moneyUser, profilePic, userName, roleUser }) %>

        <!-- / Navbar -->

        <!-- Content wrapper -->
        <div class="content-wrapper">

          <!-- Toast -->
          <div class="bs-toast toast toast-placement-ex m-3 top-0 end-0" role="alert" aria-live="assertive"
            aria-atomic="true" data-bs-delay="2000">
            <div class="toast-header">
              <i class="bx bx-bell me-2"></i>
              <div class="toast-title me-auto fw-medium"></div>
              <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body"></div>
          </div>
          <!-- / Toast -->

          <!-- Modal -->
          <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="modalCenterTitle">Redeem telah dibuat</h5>
                </div>
                <div class="modal-body">
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="resultCodeRedeem">Code</label>
                    <div class="col-sm-10">
                      <div class="input-group input-group-merge">
                        <input
                        type="text"
                        id="resultCodeRedeem"
                        class="form-control"
                        disabled/>
                        <span class="input-group-text cursor-pointer" id="copy-button-click"><i class="copy-button-icon bx bx-copy"></i></span>
                      </div>
                    </div>
                  </div>
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="resultOwnerRedeem" class="form-label">Owner</label>
                    <div class="col-sm-10">
                      <input
                      type="text"
                      id="resultOwnerRedeem"
                      class="form-control"
                      disabled/>
                    </div>
                  </div>
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="resultLimitRedeem" class="form-label">Limit Redeem</label>
                    <div class="col-sm-10">
                      <input
                      type="text"
                      id="resultLimitRedeem"
                      class="form-control"
                      disabled/>
                    </div>
                  </div>
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="resultTimeRedeem" class="form-label">Waktu</label>
                    <div class="col-sm-10">
                      <input
                      type="text"
                      id="resultTimeRedeem"
                      class="form-control"
                      disabled/>
                    </div>
                  </div>
                  <div class="row mb-4">
                    <label class="col-sm-2 col-form-label" for="resultTimeExpired" class="form-label">Expired</label>
                    <div class="col-sm-10">
                      <input
                      type="text"
                      id="resultTimeExpired"
                      class="form-control"
                      disabled/>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    Close
                  </button>
                </div>
              </div>
            </div>
          </div>
          <!-- / Modal -->

          <!-- Content -->
          <div class="container-xl flex-grow-1 container-p-y">
            <!-- Layout Demo --> 
            <div class="col-xl">
              <div class="card mb-5">
                <div class="card-header d-flex align-items-center justify-content-between">
                  <h5 class="mb-0">Tambah Item Reward</h5>
                </div>
                <div class="card-body">
                  <form id="addItemRedeemForm" onsubmit="return">
                    <div class="row mb-4">
                      <label class="col-sm-2 col-form-label" for="itemCount">Reward</label>
                      <div class="col-sm-10">
                        <div class="input-group">
                            <input type="text" expected="number" class="form-control" value="1" id="itemCount" />
                            <button
                              class="btn btn-outline-primary dropdown-toggle"
                              type="button"
                              data-bs-toggle="dropdown"
                              aria-expanded="false"
                              id="itemName">
                              Tidak Dipilih
                            </button>
                            <ul class="list-item-name dropdown-menu dropdown-menu-end">
                              <li><a class="dropdown-item" href="javascript:changeItemName('Money', 0);">Money</a></li>
                              <li><a class="dropdown-item" href="javascript:changeItemName('Limit', 1);">Limit</a></li>
                              <li><a class="dropdown-item" href="javascript:changeItemName('XP', 2);">XP</a></li>
                              <li><a class="dropdown-item" href="javascript:changeItemName('Double XP', 3);">Double XP</a></li>
                            </ul>
                        </div>
                      </div>
                    </div>
                    <div style="display: flex; align-items: center; justify-content: center;">
                      <button type="submit" class="btn btn-outline-warning" id="addItemRedeem">
                        <span class="tf-icons bx bx-plus me-1"></span>Tambah Item
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>

            <!-- table -->
            <div class="card mb-5">
              <h5 class="card-header">Item Reward</h5>
              <div class="table-responsive text-nowrap">
                <table class="table table-striped" id="listItemRedeem">
                    <thead>
                      <tr>
                        <th>Item</th>
                        <th>Jumlah</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                    </tbody>
                </table>
              </div>
            </div>

              <!-- Submit -->
              <div class="col-xl">
                <div class="card mb-5">
                  <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Submit</h5>
                  </div>
                  <div class="card-body">
                    <form class="submit-redeem">
                      <div class="row mb-4">
                        <label class="col-sm-2 col-form-label" for="timeRedeem">Waktu Redeem</label>
                        <div class="col-sm-10">
                          <div class="input-group">
                              <input type="text" expected="number" class="form-control" value="1" id="timeRedeem"/>
                              <button
                                class="btn btn-outline-primary dropdown-toggle"
                                type="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                                id="timeRedeemSelect"
                                data-value="Hari">
                                Hari
                              </button>
                              <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="javascript:changeTimeRedeem('Hari');">Hari</a></li>
                                <li><a class="dropdown-item" href="javascript:changeTimeRedeem('Jam');">Jam</a></li>
                              </ul>
                          </div>
                        </div>
                      </div>
                      <div class="row mb-4">
                        <label class="col-sm-2 col-form-label" for="redeemCount">Jumlah Redeem</label>
                        <div class="col-sm-10">
                          <input class="form-control" type="text" expected="number" value="1" id="redeemCount" />
                        </div>
                      </div>
                      <div class="row mb-4">
                        <label class="col-sm-2 col-form-label" for="priceRedeem">Harga Total Redeem</label>
                        <div class="col-sm-10">
                          <input class="form-control" type="text" value="Rp. 0" id="priceRedeem" disabled/>
                        </div>
                      </div>
                      <div class="d-grid gap-2 mx-auto">
                        <button type="submit" class="btn btn-dark submit-redeem">SUBMIT</button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
          </div>
          <!-- / Content -->

          <!-- Footer -->
          <%- include('page/footer') %>
          <!-- / Footer -->

          <div class="content-backdrop fade"></div>
        </div>
        <!-- Content wrapper -->
      </div>
      <!-- / Layout page -->
    </div>

    <!-- Overlay -->
    <div class="layout-overlay layout-menu-toggle"></div>
  </div>
  <!-- / Layout wrapper -->

  <!-- Core JS -->
  <!-- build:js assets/vendor/js/core.js -->

  <script src="../assets/vendor/libs/jquery/jquery.js"></script>
  <script src="../assets/vendor/libs/popper/popper.js"></script>
  <script src="../assets/vendor/js/bootstrap.js"></script>
  <script src="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
  <script src="../assets/vendor/js/menu.js"></script>

  <!-- endbuild -->

  <!-- Vendors JS -->

  <!-- Main JS -->
  <script src="../assets/js/main.js"></script>

  <!-- Page JS -->
  <script src="../assets/js/toast.js"></script>
  <script src="../assets/js/constants/dataRedeem.js" defer></script>
  <script src="../assets/js/cr.js"></script>
</body>

</html>
